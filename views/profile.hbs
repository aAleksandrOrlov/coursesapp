<h1>Profile</h1>

<div class='row'>
  <div class='col s6'>
    {{#if user.avatarUrl}}
      <img src='/{{user.avatarUrl}}' alt='avatar' class='avatar' />
    {{else}}
      <p>Profile image isn't set</p>
    {{/if}}
  </div>
  <div class='col s6'>
    <form action='/profile' method='POST' enctype='multipart/form-data'>
      <p>Email: <strong>{{user.email}}</strong></p>

      <div class='input-field col s12' style='position: relative; z-index: 5;'>
        <input
          id='name'
          name='name'
          type='text'
          class='validate'
          value={{user.username}}
          required
        />
        <label for='name'>Name</label>
        <span class='helper-text' data-error='Enter your name'></span>
      </div>
      <div class='file-field input-field'>
        <div class='btn'>
          <span>Profile Image</span>
          <input type='file' name='avatar' />
        </div>
        <div class='file-path-wrapper'>
          <input class='file-path validate' type='text' />
        </div>
      </div>

      <input type='hidden' name='_csrf' value={{csrf}} />
      <button class='btn btn-primary' type='submit'>Change profile info</button>
      {{#if error}}
        <p class='alert'>{{error}}</p>
      {{/if}}
    </form>
  </div>
</div>
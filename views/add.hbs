<h1>Add new course</h1>

<form action='/add' method='POST'>
  <div class='input-field col s6'>
    <input id='title' name='title' type='text' class='validate' value="{{data.title}}" required />
    <label for='title'>Course title</label>
    <span class='helper-text' data-error='Enter course title'></span>
  </div>

  <div class='input-field col s6'>
    <input
      id='price'
      name='price'
      type='number'
      class='validate'
      min='1'
      value="{{data.price}}"
      required
    />
    <label for='price'>Course price</label>
    <span class='helper-text' data-error='Enter course price'></span>
  </div>

  <div class='input-field col s6'>
    <input id='image' name='image' type='text' class='validate' value="{{data.image}}" required />
    <label for='image'>Image URL</label>
    <span class='helper-text' data-error='Enter image URL'></span>
  </div>

  {{#if error}}
    <p class='alert'>{{error}}</p>
  {{/if}}

  <input type='hidden' name='_csrf' value={{csrf}} />
  <button class='btn btn-primary'>Add course</button>
</form>
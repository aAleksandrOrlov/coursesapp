<div class='row'>
  <div class='col s12'>
    <ul class='tabs'>
      <li class='tab col s6'><a class='active' href='#signin'>Sign In</a></li>
      <li class='tab col s6'><a href='#signup'>Sign Up</a></li>
    </ul>
  </div>

  {{#if error}}
    <p class="alert">{{error}}</p>
  {{/if}}

  <div id='signin' class='col s6 offset-s3'>
    <form action='/auth/signin' method='POST'>
      <div class='input-field col s12'>
        <input
          id='email_signin'
          name='email'
          type='email'
          class='validate'
          required
        />
        <label for='email_signin'>Email</label>
        <span class='helper-text' data-error='Enter email'></span>
      </div>

      <div class='input-field col s12'>
        <input
          id='password_signin'
          name='password'
          type='password'
          class='validate'
          required
        />
        <label for='password_signin'>Password</label>
        <span class='helper-text' data-error='Enter password'></span>
      </div>

      <input type='hidden' name='_csrf' value={{csrf}} />
      <button class='btn btn-primary'>Sign In</button>
    </form>
    <a href="/auth/reset">Forgot password?</a>
  </div>

  <div id='signup' class='col s6 offset-s3'>
    <form action='/auth/signup' method='POST'>
      <div class='input-field col s12'>
        <input id='name' name='name' type='text' class='validate' required />
        <label for='name'>Name</label>
        <span class='helper-text' data-error='Enter your name'></span>
      </div>

      <div class='input-field col s12'>
        <input
          id='email_signup'
          name='email'
          type='email'
          class='validate'
          required
        />
        <label for='email_signup'>Email</label>
        <span class='helper-text' data-error='Enter email'></span>
      </div>

      <div class='input-field col s12'>
        <input
          id='password_signup'
          name='password'
          type='password'
          class='validate'
          required
        />
        <label for='password_signup'>Password</label>
        <span class='helper-text' data-error='Enter password'></span>
      </div>

      <div class='input-field col s12'>
        <input
          id='confirm'
          name='confirm'
          type='password'
          class='validate'
          required
        />
        <label for='confirm'>Re-Type Password</label>
        <span class='helper-text' data-error='Enter password again'></span>
      </div>

      <input type='hidden' name='_csrf' value={{csrf}} />
      <button class='btn btn-primary'>Sign Up</button>
    </form>
  </div>
</div>